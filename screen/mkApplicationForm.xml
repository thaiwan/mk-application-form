<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd" require-authentication="anonymous-all">
	<transition name="createApplication">
        <service-call name="MkapplicationFormservice.create#Applicant" in-map="context" out-map="context"/>        
		<!-- <service-call name="mantle.party.PartyServices.create#PartyContent" in-map="context" out-map="context" /> -->
		<default-response url="." />
	</transition>
	<widgets>
		<form-single name="CreateApplicationForm" transition="createApplication" map="content">
			<field name="firstName">
				<default-field title="First Name *">
					<text-line size="70" />
				</default-field>
			</field>
			<field name="lastName">
				<default-field title="Last Name *">
					<text-line size="70" />
				</default-field>
			</field>
			<field name="contactNumber">
				<default-field title="Primary Phone Number *">
					<text-line size="70" />
				</default-field>
			</field>
			<field name="emailAddress">
				<default-field title="Email Address *">
					<text-line size="70" />
				</default-field>
			</field>
			<field name="address1">
				<default-field title="Address *">
					<text-line size="70" />
				</default-field>
			</field>
			<field name="postalCode">
				<default-field title="Zip Code *">
					<text-line size="10" />
				</default-field>
			</field>
			<field name="city">
				<default-field title="City *">
					<text-line size="30" />
				</default-field>
			</field>
			<field name="stateProvinceGeoId">
				<default-field title="State *">
					<text-line size="30" />
				</default-field>
			</field>
			<field name="organizationName">
				<default-field title="Current Employer *">
					<text-line size="30" />
				</default-field>
			</field>
	
			<field name="contentFile">
				<default-field title="Upload resume">
					<file />
				</default-field>
			</field>
			<field name="contentTypeEnumId">
				<default-field title="Content Type">
					<widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#enumDropDown">
						<set field="enumTypeId" value="PartyContentType" />
						<set field="allowEmpty" value="true" />
					</widget-template-include>
				</default-field>
			</field>
			<field name="submitButton">
				<default-field title="Submit Application">
					<submit />
				</default-field>
			</field>
		</form-single>
	</widgets>
</screen>
